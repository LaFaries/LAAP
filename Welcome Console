  <script>
    /* =========================================================
       LAAP Console Welcome – Tier + Routing Logic
       ========================================================= */

    // URLs (locked to your current deployment)
    const BUILDER_URL = "https://scintillating-fairy-cd927a.netlify.app/wizard/";
    // (This page itself is your Console Welcome. Your "main console" remains at:)
    const CONSOLE_URL = "https://laap-console.netlify.app/";

    // Local storage keys
    const KEY_TIER = "laap_tier";              // "free" | "setup" | "full"
    const KEY_PROFILE_NAME = "laap_profile";   // optional: "LaFaries Mortimer LLC" etc.

    // Elements
    const tierLabel = document.getElementById("tierLabel");
    const profileLabel = document.getElementById("profileLabel");
    const accessNote = document.getElementById("accessNote");
    const welcomeLine = document.getElementById("welcomeLine");

    const btnContinue = document.getElementById("btnContinue");
    const btnUpgrade = document.getElementById("btnUpgrade");
    const btnOpenTierModal = document.getElementById("btnOpenTierModal");

    const tierModal = document.getElementById("tierModal");
    const modalBackdrop = document.getElementById("modalBackdrop");
    const btnCloseModal = document.getElementById("btnCloseModal");

    const ribbonFree = document.getElementById("ribbonFree");
    const ribbonSetup = document.getElementById("ribbonSetup");
    const ribbonFull = document.getElementById("ribbonFull");

    // Helpers
    function getTier(){
      return (localStorage.getItem(KEY_TIER) || "free").toLowerCase();
    }

    function setTier(tier){
      localStorage.setItem(KEY_TIER, tier);
      applyTierUI();
    }

    function getProfile(){
      return localStorage.getItem(KEY_PROFILE_NAME) || "";
    }

    function applyTierUI(){
      const tier = getTier();

      tierLabel.textContent = tier === "full" ? "Full LAAP" : (tier === "setup" ? "Setup" : "Free");

      // Profile label
      const profile = getProfile();
      profileLabel.textContent = profile ? profile : "New Profile";

      // Access note + button behavior
      if (tier === "free"){
        accessNote.textContent = "Builder is locked on Free tier.";
      } else if (tier === "setup"){
        accessNote.textContent = "Builder unlocked. Continue when ready.";
      } else {
        accessNote.textContent = "Full LAAP unlocked. Builder + modules available.";
      }

      // Modal ribbons
      ribbonFree.style.display = (tier === "free") ? "block" : "none";
      ribbonSetup.style.display = (tier === "setup") ? "block" : "none";
      ribbonFull.style.display = (tier === "full") ? "block" : "none";

      // Welcome line (personalized)
      if (profile){
        welcomeLine.textContent = `Your Console is ready for ${profile}. Choose your tier, then continue into the LAAP Builder to generate your structure, drafts, and workflows.`;
      }
    }

    function openModal(){
      tierModal.classList.add("open");
      tierModal.setAttribute("aria-hidden", "false");
      document.body.style.overflow = "hidden";
    }

    function closeModal(){
      tierModal.classList.remove("open");
      tierModal.setAttribute("aria-hidden", "true");
      document.body.style.overflow = "";
    }

    function goBuilderOrUpgrade(){
      const tier = getTier();
      if (tier === "free"){
        openModal();
        return;
      }
      // Proceed to Builder
      window.location.href = BUILDER_URL;
    }

    // Events
    btnContinue.addEventListener("click", goBuilderOrUpgrade);
    btnUpgrade.addEventListener("click", openModal);
    btnOpenTierModal.addEventListener("click", openModal);
    btnCloseModal.addEventListener("click", closeModal);
    modalBackdrop.addEventListener("click", closeModal);

    // Tier pick buttons (both grid + modal)
    document.querySelectorAll("[data-pick]").forEach(btn => {
      btn.addEventListener("click", () => {
        const tier = btn.getAttribute("data-pick");
        setTier(tier);

        // If they upgraded to setup/full from modal, move them straight to Builder (clean flow)
        if (tier === "setup" || tier === "full"){
          closeModal();
          // small beat for UI polish
          setTimeout(() => window.location.href = BUILDER_URL, 220);
        } else {
          closeModal();
        }
      });
    });

    // Year
    document.getElementById("year").textContent = new Date().getFullYear();

    // Init
    (function init(){
      // default tier if not set
      if (!localStorage.getItem(KEY_TIER)) localStorage.setItem(KEY_TIER, "free");
      applyTierUI();
    })();
  </script>
</body>
</html>
